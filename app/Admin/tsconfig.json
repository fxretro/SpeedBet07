{
  "compilerOptions": {    
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
